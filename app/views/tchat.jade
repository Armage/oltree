extends layout

block css
	link(rel='stylesheet', href='/stylesheets/tchat.css')

block scripts
	script(src='/js/lib/angular.min.js')
	script(src='/socket.io/socket.io.js')
	script(src='/js/tchat.js')
	script(src='/js/services/tchatService.js')

block content
	h1 TChat

	p Ici, on discute...
	hr

	div#tchat(ng-app="tchat" ng-controller="tchatController")
		div#messages
			p(ng-repeat="message in messages")

		div#controls
			form(ng-submit="sendPseudo()")
				div.input-group
					input#name.form-control(placeholder="Pseudo", ng-model="pseudo")
					span.input-group-btn
						button.btn.btn-default(type='button') Go
			form(ng-submit="sendMessage()")
				div.input-group
					input#field.form-control(placeholder="Message", ng-model="message")
					span.input-group-btn
						button.btn.btn-default(type='button') Go